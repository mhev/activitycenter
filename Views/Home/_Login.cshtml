@model LoginUser

<h3>Login</h3>

<form action="/login" method="post">
    <div class="col">
        <div class="form-group">
            <label>Email:</label>
            <span asp-validation-for="LoginEmail" class="text-danger"></span>
            <input type="text" name="LoginEmail" class="form-control">
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label>Password:</label>
            <span asp-validation-for="LoginPassword" class="text-danger"></span>
            <input type="password" name="LoginPassword" class="form-control">
        </div>
    </div>
    <input type="submit" class="submitbutton" value="Login">
</form>